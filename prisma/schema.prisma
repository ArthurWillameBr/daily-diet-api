generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  experience Int @default(0)
  created_at    DateTime @default(now())
  meals         Meal[]

  @@map("users")
}

model Meal {
  id          String   @id @default(uuid())
  name        String
  description String?
  date_time   DateTime
  is_on_diet  Boolean
  user_id     String
  User        User     @relation(fields: [user_id], references: [id])

  @@map("meals")
}
